---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Success`;
---

<Layout metadata={{ title }}>
    <Fragment slot="header">
        <slot name="header">
            <Header
            isSticky
            position="right"
            />
        </slot>
    </Fragment>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="text-primary">Thank you!</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Contact form successfully sent.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
            Our team will reach out to you within 24 hours!
        </p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
